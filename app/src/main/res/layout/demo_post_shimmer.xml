<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view14"
            android:layout_width="@dimen/_35mdp"
            android:layout_height="@dimen/_35mdp"
            android:layout_marginTop="2dp"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/lightgray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view15"
            android:layout_width="@dimen/_75mdp"
            android:layout_height="@dimen/_12mdp"
            android:layout_marginStart="3dp"
            android:background="@color/lightgray"
            app:layout_constraintBottom_toTopOf="@+id/view16"
            app:layout_constraintStart_toEndOf="@+id/view14"
            app:layout_constraintTop_toTopOf="@+id/view14"
            app:layout_constraintVertical_chainStyle="packed" />

        <View
            android:id="@+id/view16"
            android:layout_width="@dimen/_55mdp"
            android:layout_height="@dimen/_10mdp"
            android:layout_marginTop="4dp"
            android:background="@color/lightgray"
            app:layout_constraintBottom_toBottomOf="@+id/view14"
            app:layout_constraintStart_toStartOf="@+id/view15"
            app:layout_constraintTop_toBottomOf="@+id/view15" />

        <View
            android:id="@+id/view17"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150mdp"
            android:layout_marginTop="8dp"
            android:background="@drawable/follow_active_btn"
            android:backgroundTint="@color/lightgray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view14"
            app:layout_constraintTop_toBottomOf="@+id/view14" />

        <View
            android:id="@+id/view18"
            android:layout_width="0dp"
            android:layout_height="@dimen/_15mdp"
            android:layout_marginTop="8dp"
            android:background="@color/lightgray"
            app:layout_constraintEnd_toEndOf="@+id/view17"
            app:layout_constraintStart_toStartOf="@+id/view17"
            app:layout_constraintTop_toBottomOf="@+id/view17" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>